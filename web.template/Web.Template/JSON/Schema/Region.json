{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Region",
    "type": "object",
    "properties": {
        "Summary": {
            "type": "string"
        },
        "SummaryImage": {
            "type": "string",
            "format": "image"
        },
        "LocationInformation": {
            "type": "array",
            "title": "Location",
            "description": "Location information for the region.",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "Title": {
                        "type": "string"
                    },
                    "Information": {
                        "type": "string"
                    }
                }
            }
        },
        "Climate": {
            "type": "object",
            "title": "Climate",
            "description": "Climate information for the region.",
            "properties": {
                "Title": {
                    "type": "string",
                    "default": "Climate"
                },
                "Summary": {
                    "type": "string"
                },
                "Description": {
                    "type": "string"
                },
                "Measures": {
                    "type": "array",
                    "minItems": 1,
                    "uniqueItems": true,
                    "title": "Measures",
                    "description": "A list of climate measures and their values.",
                    "items": {
                        "type": "object",
                        "properties": {
                            "Type": {
                                "type": "string",
                                "enum": [ "Sun", "Rain", "Temperature" ],
                                "default": "Sun" 
                            },
                            "Title": {
                                "type": "string"
                            },
                            "Values": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}