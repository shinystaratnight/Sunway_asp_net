{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "StickyNav",
    "type": "object",
    "properties": {
        "NavItems": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "title": "Nav Items",
            "description": "List of navigation items to appear in the sticky nav menu.",
            "items": {
                "$ref": "#/definitions/NavItem"
            }
        },
        "Configuration": {
            "type": "object",
            "title": "Configuration",
            "description": "Configuration options for the sticky nav widget",
            "properties": {
                "ContainerStyle": {
                    "type": "string",
                    "format": "select",
                    "enum": [
                        "Default",
                        "Highlight",
                        "Alternate"
                    ]
                },
                "ContainerPadding": {
                    "type": "string",
                    "format": "select",
                    "default": "Medium",
                    "enum": [
                        "None",
                        "Small",
                        "Medium",
                        "Large"
                    ]
                }
            }
        }
    },
    "definitions": {
        "NavItem": {
            "type": "object",
            "properties": {
                "Title": {
                    "type": "string"
                },
                "AssociatedContext": {
                    "type": "string"
                },
                "Sequence": {
                    "type": "integer",
                    "format": "select",
                    "minimum": 1,
                    "maximum": 10,
                    "default": 0
                }
            },
            "required": [
                "Title",
                "AssociatedContext",
                "Sequence"
            ]
        }
    }
}