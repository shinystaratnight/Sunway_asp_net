{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "AccordionContent",
    "type": "object",
    "properties": {
        "Title": {
            "type": "string",
            "default": "Title"
        },
        "LeadParagraph": {
            "type": "string",
            "format": "textarea",
            "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed ornare urna augue, vitae pulvinar augue sollicitudin eget. Integer quis quam at risus consectetur facilisis."
        },
        "AccordionContent": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "title": "Accordion Content",
            "description": "List of items to display in the accordion.",
            "items": {
                "type": "object",
                "title": "Accordion item",
                "description": "An individual accordion item",
                "properties": {
                    "Title": { "type": "string" },
                    "Table": {
                        "type": "object",
                        "title": "Table",
                        "description": "Table of content to display.",
                        "properties": {
                            "HeaderRow": {
                                "type": "object",
                                "title": "Header Row",
                                "properties": {
                                    "ColumnOneTitle": { "type": "string" },
                                    "ColumnTwoTitle": { "type": "string" },
                                    "ColumnTwoTitleMobile": { "type": "string" },
                                    "ColumnThreeTitle": { "type": "string" },
                                    "ColumnThreeTitleMobile": { "type": "string" }
                                }
                            },
                            "ContentRows": {
                                "type": "array",
                                "minItems": 1,
                                "uniqueItems": true,
                                "title": "Content Rows",
                                "description": "A list of rows to display the content. If line breaks are needed in a cell, use: // to do so.",
                                "default": [
                                    {
                                        "ColumnOne": "",
                                        "ColumnTwo": "",
                                        "ColumnThree": ""
                                    },
                                    {
                                        "ColumnOne": " ",
                                        "ColumnTwo": " ",
                                        "ColumnThree": " "
                                    }
                                ],
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "ColumnOne": { "type": "string" },
                                        "ColumnTwo": { "type": "string" },
                                        "ColumnThree": { "type": "string" }
                                    }
                                }
                            }
                        }
                    },
                    "Text": {
                        "type": "string",
                        "format": "textarea",
                        "description": "Markdown text based on CommonMark spec. See http://commonmark.org/help/ for details."
                    },
                    "SingleLine": {
                        "type": "string",
                        "default": "",
                        "description": "A single line of text; the accordion item will not expand or collapse."
                    },
                    "Sequence": {
                        "type": "integer",
                        "default": 1,
                        "description": "Determines the order in which this item is displayed"
                    },
                    "Hidden": {
                        "type": "boolean",
                        "default": false,
                        "description": "Tick to hide this item without deleting your content"
                    }
                },
                "required": [ "Title", "Sequence", "Hidden" ]
            },
            "default": [
                {
                    "Title": "A placeholder key",
                    "Text": "A placeholder value associated with a key",
                    "SingleLine": "",
                    "Table": {
                        "HeaderRow": {
                            "ColumnOneTitle": "",
                            "ColumnTwoTitle": "",
                            "ColumnThreeTitle": ""
                        },
                        "ContentRows": [
                            {
                                "ColumnOne": "",
                                "ColumnTwo": "",
                                "ColumnThree": ""
                            }
                        ]
                    },
                    "Sequence": 1,
                    "Hidden": false
                },
                {
                    "Title": "A placeholder key",
                    "Text": "A placeholder value associated with a key",
                    "SingleLine": "",
                    "Table": {
                        "HeaderRow": {
                            "ColumnOneTitle": "",
                            "ColumnTwoTitle": "",
                            "ColumnThreeTitle": ""
                        },
                        "ContentRows": [
                            {
                                "ColumnOne": "",
                                "ColumnTwo": "",
                                "ColumnThree": ""
                            }
                        ]
                    },
                    "Sequence": 2,
                    "Hidden": false
                },
                {
                    "Title": "A placeholder key",
                    "Text": "A placeholder value associated with a key",
                    "SingleLine": "",
                    "Table": {
                        "HeaderRow": {
                            "ColumnOneTitle": "",
                            "ColumnTwoTitle": "",
                            "ColumnTwoTitleMobile": "",
                            "ColumnThreeTitle": "",
                            "ColumnThreeTitleMobile": ""
                        },
                        "ContentRows": [
                            {
                                "ColumnOne": "",
                                "ColumnTwo": "",
                                "ColumnThree": ""
                            }
                        ]
                    },
                    "Sequence": 3,
                    "Hidden": false
                },
                {
                    "Title": "A placeholder key",
                    "Text": "A placeholder value associated with a key",
                    "SingleLine": "",
                    "Table": {
                        "HeaderRow": {
                            "ColumnOneTitle": "",
                            "ColumnTwoTitle": "",
                            "ColumnTwoTitleMobile": "",
                            "ColumnThreeTitle": "",
                            "ColumnThreeTitleMobile": ""
                        },
                        "ContentRows": [
                            {
                                "ColumnOne": "",
                                "ColumnTwo": "",
                                "ColumnThree": ""
                            }
                        ]
                    },
                    "Sequence": 4,
                    "Hidden": false
                },
                {
                    "Title": "A placeholder key",
                    "Text": "A placeholder value associated with a key",
                    "SingleLine": "",
                    "Table": {
                        "HeaderRow": {
                            "ColumnOneTitle": "",
                            "ColumnTwoTitle": "",
                            "ColumnTwoTitleMobile": "",
                            "ColumnThreeTitle": "",
                            "ColumnThreeTitleMobile": ""
                        },
                        "ContentRows": [
                            {
                                "ColumnOne": "",
                                "ColumnTwo": "",
                                "ColumnThree": ""
                            }
                        ]
                    },
                    "Sequence": 5,
                    "Hidden": false
                },
                {
                    "Title": "A placeholder key",
                    "Text": "A placeholder value associated with a key",
                    "SingleLine": "",
                    "Table": {
                        "HeaderRow": {
                            "ColumnOneTitle": "",
                            "ColumnTwoTitle": "",
                            "ColumnTwoTitleMobile": "",
                            "ColumnThreeTitle": "",
                            "ColumnThreeTitleMobile": ""
                        },
                        "ContentRows": [
                            {
                                "ColumnOne": "",
                                "ColumnTwo": "",
                                "ColumnThree": ""
                            }
                        ]
                    },
                    "Sequence": 6,
                    "Hidden": false
                }
            ]
        },
        "Configuration": {
            "type": "object",
            "title": "Configuration",
            "description": "Configuration options for the accordion widget",
            "properties": {
                "ContainerStyle": {
                    "type": "string",
                    "format": "select",
                    "default": "Default",
                    "enum": [ "Default", "Highlight" ]
                },
                "HighlightedItemStyle": {
                    "type": "string",
                    "format": "select",
                    "default": "Highlight",
                    "enum": [ "Default", "Highlight" ]
                },
                "ContainerPadding": {
                    "type": "string",
                    "format": "select",
                    "default": "Medium",
                    "enum": [ "None", "Small", "Medium", "Large" ]
                },
                "AccordionItemPadding": {
                    "type": "string",
                    "format": "select",
                    "default": "Medium",
                    "enum": [ "Small", "Medium", "Large" ]
                }
            }
        }
    },
    "required": [ "AccordionContent" ]
}