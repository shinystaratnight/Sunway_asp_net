{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Incentive",
    "type": "object",
    "properties": {
        "Title": {
            "type": "string",
            "default": ""
        },
        "Description": {
            "type": "string",
            "format": "textarea",
            "default": ""
        },
        "Button": {
            "type": "object",
            "title": "Button",
            "description": "Button that appears below the description",
            "properties": {
                "Text": { "type": "string" },
                "URL": { "type": "string" }
            }
        },
        "Image": {
            "type": "string",
            "format": "image"
        },
        "PublishDates": {
            "type": "object",
            "properties": {
                "PublishUp": {
                    "type": "object",
                    "title": "Publish up date and time",
                    "properties": {
                        "Date": {
                            "type": "string",
                            "format": "date",
                            "default": "2000-01-01"
                        },
                        "Time": {
                            "type": "string",
                            "default": "00:00",
                            "description": "Time should be in the format 00:00"
                        }
                    }
                },
                "PublishDown": {
                    "type": "object",
                    "title": "Publish down date and time",
                    "properties": {
                        "Date": {
                            "type": "string",
                            "format": "date",
                            "default": "2030-01-01"
                        },
                        "Time": {
                            "type": "string",
                            "default": "00:00",
                            "description": "Time should be in the format 00:00"
                        }
                    }
                }
            }
        }
    }
}