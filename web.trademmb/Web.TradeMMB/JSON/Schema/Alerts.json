{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Alerts",
    "type": "object",
    "description": "Widget that renders alerts",
    "properties": {
        "Configuration": {
            "type": "object",
            "title": "Configuration",
            "description": "Configuration options for the alerts widget",
            "properties": {
                "ContainerStyle": {
                    "type": "string",
                    "format": "select",
                    "default": "Highlight",
                    "enum": [ "Default", "Highlight", "Alternate" ]
                },
                "ContainerPadding": {
                    "type": "string",
                    "format": "select",
                    "default": "Medium",
                    "enum": [ "None", "Small", "Medium", "Large" ]
                }
            }
        }
    }
}